<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ro.ubbcluj.scs.java.snake.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateDBServlet</servlet-name>
        <servlet-class>ro.ubbcluj.scs.java.snake.Utils.CreateDBServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ro.ubbcluj.scs.java.snake.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartGame</servlet-name>
        <servlet-class>ro.ubbcluj.scs.java.snake.StartGame</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateDBServlet</servlet-name>
        <url-pattern>/createDb</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartGame</servlet-name>
        <url-pattern>/game</url-pattern>
    </servlet-mapping>
</web-app>