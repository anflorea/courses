<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.flo.gamestoreapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/client_section"
            android:onClick="onClientClicked"/>

        <Button
            android:id="@+id/button_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/employee_section"
            android:onClick="onEmployeeClicked"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
